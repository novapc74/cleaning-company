{% extends 'base.html.twig' %}

{% block title %}Санкт-Петербургская клининговая компания{% endblock %}
{% block description %}
    Санкт-Петербургская клининговая компания. Клининг в Санкт-Петербурге. Мы работаем на рынке клининговых услуг с 2012. Комплексное решение для коммерческого клининга
{% endblock %}

{% block content %}
    <main class="main home-page">
        {#    главный баннер #}
        {% include 'components/sections/hero-section.html.twig' %}

        {#    секция "О нас" #}
        {% if about_us %}
            {% include 'components/sections/about-section.html.twig' with { section: about_us } %}
            {% if gallery_collection | length %}
                {% include 'components/sections/gallery-section.html.twig' with { gallery: gallery_collection } %}
            {% endif %}
        {% endif %}

        {#    секция "Наши услуги" #}
        {% if services_collection | length %}
            {% include 'components/sections/services-section.html.twig' with { services: services_collection } %}
        {% endif %}

        {#    секция с видео #}
        {% include 'components/sections/video-section.html.twig' with { video: asset('build/video/SpCC.mp4'), id: 'spcc-video', poster: asset('build/images/video-poster.jpg') } %}

        {#    секция "Преимущества" #}
        {% if advantages_collection | length %}
            {% include 'components/sections/advantages-section.html.twig' with { advantages: advantages_collection } %}
        {% endif %}

        {#    секция "Как мы работаем" #}
        {% if how_it_works_collection | length %}
            {% include 'components/sections/steps-section.html.twig' with { steps: how_it_works_collection } %}
        {% endif %}

        {#    секция "Наши проекты" #}
        {% if cases_collection | length %}
            {% include 'components/sections/swiper-section.html.twig' with { theme: 'grey', type: 'cases', title: 'Наши проекты', slides: cases_collection, id: 'cases' } %}
        {% endif %}

        {#    секция "Отзывы" #}
        {% if reviews | length %}
            {% include 'components/sections/swiper-section.html.twig' with { theme: 'grey', type: 'reviews', title: 'Отзывы', slides: reviews, id: 'reviews' } %}
        {% endif %}

        {#    секция "Наша география" #}
        {% if locations | length %}
            {% include 'components/sections/geography-section.html.twig' %}
        {% endif %}

        {#    секция "Наши клиенты" #}
        {% include 'components/sections/clients-section.html.twig' %}


        {#    секция "Ответы на часто задаваемые вопросы" #}
        {% if question_answer_collection | length %}
            {% include 'components/sections/faq-section.html.twig' with { faq: question_answer_collection } %}
        {% endif %}

        <section class="base-section lada-section">
            <div class="container">
                <h2 class="base-section__title">
                    Продаем LADA LARGUS KSOY5L
                </h2>
                <p class="base-section__text">
                    Цена продажи: 20 000,00 руб. <br>
                    Общее состояние транспортного средства: технически неисправное состояние.
                </p>
                <a class="lada-section__link" href="/files/Договор%20купли-продажи%20ООО%20СПКК.doc" download>Скачать договор оферты</a>
                <div class="lada-section__img">
                    <img src="{{ asset('build/images/lada.png') }}" alt="lada largus">
                </div>
            </div>
        </section>

        {% include 'components/sections/form-section.html.twig' %}
    </main>
{% endblock %}