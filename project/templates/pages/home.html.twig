{% extends 'base.html.twig' %}

{% block title %}СПКК{% endblock %}
{% block description %}Санкт-Петербургская клининговая компания{% endblock %}

{% block content %}
    {% include 'components/sections/hero-section.html.twig' %}
    {% include 'components/sections/about-section.html.twig' %}
    {% include 'components/sections/gallery-section.html.twig' %}
    {% include 'components/sections/services-section.html.twig' %}
    {% include 'components/sections/steps-section.html.twig' %}
    {% include 'components/sections/faq-section.html.twig' %}

    {% if about_us is not null %}
        {{ about_us.title ?? '' }}
        {{ about_us.description ?? '' }}
    {% endif %}

    <!-- Пример использования однотипных секций -->
    {% for about in about_collection %}
        {{ about.title ?? '' }}
        {{ about.description | raw }}
        <!-- Пример использования галереи, даже, если картинка одна!!! -->
        {% for item in about.gallery %}
            <!-- фильтры брать с project/config/packages/liip_images.yaml -->
            <img src="{{ vich_uploader_asset(item.image, 'imageFile') | imagine_filter_cache('banner_md') }}"
                 alt="{{ about.title ?? 'фото' }}">
        {% endfor %}
    {% endfor %}

    {% for gallery in gallery_collection %}
        <!-- фильтры брать с project/config/packages/liip_images.yaml -->
        <img src="{{ vich_uploader_asset(gallery.image, 'imageFile') | imagine_filter_cache('banner_md') }}"
             alt="фото галереи - {{ gallery.id }}">
    {% endfor %}

{% endblock %}