    <!-- Пример использования однотипных секций -->
    {% for about in about_collection %}
        <!-- Пример использования галереи, даже, если картинка одна!!! -->
        {% if about.gallery is defined %}
            {% for item in about.gallery %}
                <!-- фильтры брать с project/config/packages/liip_images.yaml -->
                <img src="{{ vich_uploader_asset(item.image, 'imageFile') | imagine_filter_cache('banner_md') }}"
                     alt="">
            {% endfor %}
        {% endif %}
    {% endfor %}

