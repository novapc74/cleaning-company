{# @var review \App\Entity\Review #}
{% extends 'base.html.twig' %}

{% block title %}Hello ReviewController!{% endblock %}

{% block content %}
    <div>
        {{ review.name }}

        {{ review.comment }}

        {{ review.createdAt | format_datetime('medium', 'none', locale='ru') }}

        {% for avatar in review.image %}
            <img src="{{ vich_uploader_asset(avatar.image, 'imageFile') | imagine_filter_cache('admin_thumbnail') }}"
                 alt="{{ review.name }}">
        {% endfor %}
    </div>
{% endblock %}
