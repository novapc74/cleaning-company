{# @var review \App\Entity\Review #}
{% extends 'base.html.twig' %}

{% block title %}Hello ReviewController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ 'Отзывы' }}! ✅</h1>

        <ul>
            {% for review in reviews %}
                <li>
                    <a href="{{ path('app_single_review', {slug: review.slug}) }}">{{ review.name }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
