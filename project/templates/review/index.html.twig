{% extends 'base.html.twig' %}

{% block title %}Отзывы{% endblock %}

{% block content %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <ul>
            {% for review in reviews %}
                <li>
                    <a href="{{ path('app_single_review', {slug: review.slug}) }}">{{ review.name }}</a>
                    {{ review.comment }}
                    {{ review.createdAt | format_datetime('medium', 'none', locale='ru') }}
                    {% for avatar in review.image %}
                        <img src="{{ vich_uploader_asset(avatar.image, 'imageFile') | imagine_filter_cache('admin_thumbnail') }}"
                             alt="{{ review.name }}">
                    {% endfor %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
